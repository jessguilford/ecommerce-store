<div class="container">
  <div class="product-page">
    <div class="product-page-image">
      <img class="product-thumbnail" src="{{product.image}}">
    </div>
    <div class="product-page-info">
      <h1>{{product.name}}</h1>
      <p>{{product.price}}</p>
      <p>{{product.description}}</p>
      <button {{action 'addToCart' product}}>Add to Cart</button>
    </div>
  </div>
</div>
